#!/bin/sh
set -o nounset
#set -x #DEBUG

. config/config-vars
. bin/functions.sh

$PRINTINFO Installing utility packages for build if needed...
$SUDO apt-get install \
     buildtorrent \
     curl \
     gnupg \
     coreutils \
     squashfs-tools \
     ccache \
     genisoimage \
     pandoc \
     syslinux || {
    $PRINTERROR Package installation failed!
    exit 1
}

$PRINTSUCCESS done.
exit 0
